<Window x:Class="V1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:V1"
        mc:Ignorable="d"
        Title="MainWindow" Height="489" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/mapua-facade-photo-2-newsweek.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid Margin="145,0,145,0" Height="83" VerticalAlignment="Center">
            <PasswordBox x:Name="pb_Password" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" Width="120" TextInput="pb_Password_TextInput"/>

            <TextBox x:Name="tb_Username" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="120" Margin="0,0,0,65" TextChanged="tb_Username_TextChanged"/>
            <Button x:Name="btn_Login" Content="Login" Margin="24,0,24,3" Click="btn_Login_Click" Height="34" VerticalAlignment="Bottom"/>

        </Grid>

    </Grid>
</Window>
